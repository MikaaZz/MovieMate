<h1>Listings</h1>

<div class="container my-5">
  <div class="row">
    <div class="listing_box">
      <% @listings.each do |listing| %>
        <div class="col-md-4">
          <div class="listing-card">
            <%= link_to listings_path(listing) do %>
            <%= cl_image_tag listing.photo.key, height: 300, width: 400, crop: :fill %>
              <h2 class="listing-text"><%= listing.title %></h2>
              <p class="listing-text"><%= listing.description %></p>
              <p class="listing-text"><%= listing.price %></p>
              <p class="listing-text"> <%= listing.location %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="w-100 text-center mb-4 d-flex justify-content-center align-item-center">
    <%= link_to "Add Listing", new_listing_path, class: "float text-decoration-none" %>
  </div>
</div>
