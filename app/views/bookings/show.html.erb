<h1> Confirm and Pay </h1>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1>Booking Confirmation</h1>
      <!-- Payment options section -->
      <div class="payment-options">
        <h2>Payment Options</h2>
        <!-- Payment form or options go here -->
      </div>
      <!-- Reviews section -->
      <div class="reviews">
        <h2>Reviews</h2>
        <!-- Reviews content goes here -->
      </div>
    </div>
    <div class="col-lg-4">
      <!-- Listing Card -->
      <div class="listing-card">
        <div class="card-body">
          <h5 class="card-title"><%= @booking.listing.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= @booking.listing.user.first_name %> <%= @booking.listing.user.last_name %>
          </h6>
          <img src="https://media.gettyimages.com/id/1244034031/vector/cinema-poster-with-cola-film-strip-and-clapper-vector.jpg?s=612x612&w=gi&k=20&c=8ClshQC50T-wPj6CPvnPnFq1Er6Fs8fbrreXWehvdgk=" alt="Profile Picture">
          <p class="card-text">Location: <%= @booking.listing.location %></p>
        </div>
      </div>
    </div>
  </div>
</div>
